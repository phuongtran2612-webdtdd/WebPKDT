@{
    ViewBag.Title = "ChiTietHoaDon";
    Layout = "~/Views/Shared/_LayoutPageQuanLy.cshtml";
}

<h2>DANH SÁCH CHI TIẾT HÓA ĐƠN</h2>
@using TNP_SHOP.Models;
@model List<CHITIETHD>
<div>
    @Html.Action("DanhMucPartial", "QuanLy")
    <div>
        @ViewBag.tb
    </div>
    <div class="card border-dark">
    <table class="table">
        <tr style="background-color:yellow">
            <th>MÃ HÓA ĐƠN</th>
            <th>TÊN HÀNG</th>
            <th>SỐ LƯỢNG</th>
            <th>THÀNH TIỀN</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td width="25%">@item.MaHD</td>
                <td width="25%">@item.TenHang</td>
                <td width="25%">@item.SoLuong</td>
                <td width="25%">@item.ThanhTien</td>
                <td>@Html.ActionLink("Delete", "XoaCTHD", new {@mahd = item.MaHD,@tenhang = item.TenHang })</td>

            </tr>
        }
        </table>
   </div>
</div>