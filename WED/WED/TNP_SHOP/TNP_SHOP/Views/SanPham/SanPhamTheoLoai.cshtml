@model IEnumerable<TNP_SHOP.Models.SANPHAM>

@{
    ViewBag.Title = "SanPhamTheoLoai";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<br />
<h3>@ViewBag.loai</h3><br />

<div class="row" style="border: 1px solid #b0afaf">
    @foreach (var item in Model)
    {
        <div class="col-3 pt-5" style="text-align: center; border: 1px solid #b0afaf">
            <img src="/@item.Hinh" width="150px" height="200px" alt="Image" />
            <p>
                <strong title="@item.TenHang">@item.TenHang</strong><br />
                <a href="@Url.Action("XemChiTiet", "SanPham", new { @msp = @item.MaHang})" class="text-primary" style="text-decoration:none">Xem chi tiết</a>
            </p>
        </div>
    }
</div>
